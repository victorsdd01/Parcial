<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.Admin_Main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Bienvenido:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/admin_main_txv_nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="---------"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_admin_AgregarRecetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:onClick="agregarReceta"
        android:text="Agregar receta"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btn_admin_crearUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:onClick="agregarNuevoUsuario"
        android:text="agregar nuevo usuario"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btn_admin_eliminar_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:onClick="eliminarReceta"
        android:text="Eliminar receta"
        app:cornerRadius="20dp" />

    <ListView
        android:id="@+id/admin_liistViewRecetas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>