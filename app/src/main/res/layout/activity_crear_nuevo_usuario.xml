<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearNuevoUsuario">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_weight="1"
        android:text="Crear Nuevo Usuario"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/CrearNu_edtxUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Ingrese su nombre de usuario"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/CrearNu_edtxPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="ingrese una contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/CrearNu_edtxVerificarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Ingrese nuevamente la contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/CrearNu_edtxEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="ingrese su correo"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_crearNuevoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:backgroundTint="#AA4646"
        android:onClick="CrearNuevoUsuario"
        android:text="Crear"
        app:cornerRadius="20dp" />

</LinearLayout>